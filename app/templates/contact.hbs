
<h1>Contact Message</h1>

{{#if contactMessageSentSuccessfully}}

  <div data-test-confirmation-message=true>
    Message sent successfully.
  </div>

{{else}}

  {{#paper-form class="layout-column layout-align-space-around-stretch"
    onSubmit=(action "submitContactMessage") data-test-contact-form=true as |form|}}
    {{form.input label="Name" value=name onChange=(action (mut name)) icon="person"
      required=true data-test-name=true}}
    {{form.input label="Email" type="email" value=email onChange=(action (mut email))
      icon="email" required=true data-test-email=true}}
    {{form.input label="Message" textarea=true block=true maxlength=250 passThru=(hash rows=5 maxRows=5)
      value=message onChange=(action (mut message)) icon="subject" required=true
      data-test-message=true}}
    {{#form.submit-button raised=true primary=true data-test-submit=true}}
      Send message
    {{/form.submit-button}}
  {{/paper-form}}

{{/if}}

{{#info-dialog showDialog=showDialog_ContactMessageDataEmpty dialogTitle="Data empty" titleIcon="error"}}
  <p>
    Some data are empty.
  </p>
  <p>
    Please fill all fields in.
  </p>
{{/info-dialog}}

{{#info-dialog showDialog=showDialog_InvalidEmailAddress dialogTitle="Invalid email address" titleIcon="error"}}
    <p>
        The email "<strong>{{email}}</strong>" is an invalid email address.
    </p>
    <p>
        Please type in a valid email address.
    </p>
    <p>
        If the problem persists, please contact the administrator other way.
    </p>
{{/info-dialog}}

{{#info-dialog showDialog=showDialog_SendmailProcessError dialogTitle="Sendmail process error" titleIcon="error"}}
    <p>
        The contact message cannot be sent because of an error with the sendmail process.
    </p>
    <p>
        Please try again later.
    </p>
    <p>
        If the problem persists, please contact the administrator other way.
    </p>
{{/info-dialog}}

{{#info-dialog showDialog=showDialog_EmailSendError dialogTitle="Email send error" titleIcon="error"}}
    <p>
        The contact message cannot be sent because of an error sending the email.
    </p>
    <p>
        Please try again later.
    </p>
    <p>
        If the problem persists, please contact the administrator other way.
    </p>
{{/info-dialog}}

{{#info-dialog showDialog=showDialog_ContactMessageError dialogTitle="Contact message error"}}
    <p>
      The contact message cannot be sent.
    </p>
    <p>
      Please try again later.
    </p>
    <p>
      If the problem persists, please contact the administrator other way.
    </p>
{{/info-dialog}}
